<?xml version="1.0" encoding="ISO-8859-1"?>
<globals>
	<global id="global">
		<!-- distance between locations -->
		<attribute name="distance" type="int" value="20" pddl="true">
			<parameter type="Location" value="l0"/>
			<parameter type="Location" value="l1"/>
		</attribute>
